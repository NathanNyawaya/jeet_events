    <script>
        function popup() {
            document.getElementById("pop").style.display = "";
        }
        function popclose() {
            document.getElementById("pop").style.display = "none";
        }

        function copyToClipboard(text) {
            var inputc = document.body.appendChild(document.createElement("input"));
            inputc.value = text.innerHTML.trim();
            inputc.focus();
            inputc.select();
            document.execCommand('copy');
            inputc.parentNode.removeChild(inputc);
            var x = document.getElementById("copied");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
        }
       
    function check() {
        if ($('#upi-input').val().length === 12) {
            $('.submit').prop('disabled', false);
            console.log("correct utr");
        } else {
            $('.submit').prop('disabled', true);
            console.log("incorrect utr");
        }
    }
    setInterval(check, 1000);

    $('.submit').click(async function(e) {
        e.preventDefault();
        $(this).prop('disabled', true);
        // Fetch authentication token from cookie
        const authToken = document.cookie.split(';')
            .map(cookie => cookie.trim())
            .find(cookie => cookie.startsWith('auth='));

        // Fetch token from cookie
        const token = document.cookie.split(';')
            .map(cookie => cookie.trim())
            .find(cookie => cookie.startsWith('token='));


        // Show spinner
        $('#spinner').css('display', 'block');

 


        let utr = $('#upi-input').val().trim();
        // let money = $('#money-input').val().trim();

        let fileInput = $('#screenshot-input')[0];
        
    // Check if utr is present and is not of length 12
    if (utr && utr.length !== 12) {
        alert("Invalid UTR NO.");

        // $('#notification').css('display', 'block');
        // $('#notification').text('UTR must be 12 characters long.');
        // $('#spinner').css('display', 'none');
        return;
    }

    // Check if no file is selected
    if (!fileInput.files.length) {
        alert("Please upload a screenshot.");
        // $('#spinner').css('display', 'none');
        return;
    }

        let file = fileInput.files[0];
        let money = <%= amount %>;
        
        // Convert file to Base64
        let base64File = await toBase64(file);
        
        let payload = {
            utr: utr,
            money: money,
            token: token,
            auth: authToken,
            type: 'USDT',
            screenshot: base64File
        };
        
        // Debugging: Check the payload contents
        console.log(payload);

        $.ajax({
            type: "POST",
            url: "/api/webapi/recharge",
            data: JSON.stringify(payload),
            contentType: "application/json",
            success: function(response) {
                console.log(response);
                // Hide spinner on success
                $('#spinner').css('display', 'none');

                if (response.status) {
                    $("#result").css("display", "");
                    alert(response.message);
                    setInterval(() => {
                        window.location.href = "/wallet/recharge";
                    }, 2000);
                }
            },
            error: function(xhr, status, error) {
                console.log(status);
                console.log(error);
                // Hide spinner on error
                $('#spinner').css('display', 'none');
                $(this).prop('disabled', false);

                // Show error notification
                $('#notification').css('display', 'block');
                $('#notification').text('Error: ' + xhr.responseText);
            }
        });
    });

    function toBase64(file) {
        return new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => resolve(reader.result);
            reader.onerror = error => reject(error);
        });
    }
