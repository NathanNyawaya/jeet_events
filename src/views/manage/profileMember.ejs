  <script>
      $(document).ready(function() {
          // Event listener for selection change
          $('#levelSelect').change(function() {
              // Get the selected level
              let newLevel = $(this).val();
              // Get the user ID
              let userId = '<%= user.id %>'; // Assuming user ID is available in your server-side template
  
              // Make AJAX call to updateUserLevel
              $.ajax({
                  type: "POST",
                  url: "/api/webapi/admin/updateUserLevel",
                  data: {
                      userId: userId,
                      newLevel: newLevel
                  },
                  dataType: "json",
                  success: function(response) {
                      // Update the level display button
                      let levelBtn = $('.level-btn');
                      if (newLevel == 1) {
                          levelBtn.removeClass('btn-warning btn-info').addClass('btn-success').text('Admin');
                      } else if (newLevel == 2) {
                          levelBtn.removeClass('btn-success btn-info').addClass('btn-warning').text('Agent');
                      } else {
                          levelBtn.removeClass('btn-success btn-warning').addClass('btn-info').text('User');
                      }
                      // Show success message
                      Swal.fire({
                          icon: 'success',
                          title: 'Success',
                          text: 'User level updated successfully!'
                      });
                  },
                  error: function(error) {
                      console.log(error);
                      // Show error message
                      Swal.fire({
                          icon: 'error',
                          title: 'Error',
                          text: 'Failed to update user level. Please try again later.'
                      });
                  }
              });
          });
      });
  </script>
  

